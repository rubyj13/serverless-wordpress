{
  "rewrites": [
    {
      "source": "/wp-content/uploads/(.*)",
      "destination": "/wp-content/uploads/$1"
    },
    {
      "source": "/wp-content/themes/(.*)",
      "destination": "/wp-content/themes/$1"
    },
    {
      "source": "/wp-content/plugins/(.*)",
      "destination": "/wp-content/plugins/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/api/index.js"
    }
  ],
  "functions": {
    "api/index.js": {
      "includeFiles": "wp/**",
      "maxDuration": 60
    }
  },
  "build": {
    "env": {
      "NODEJS_AWS_HANDLER_NAME": "handler"
    }
  }
}
